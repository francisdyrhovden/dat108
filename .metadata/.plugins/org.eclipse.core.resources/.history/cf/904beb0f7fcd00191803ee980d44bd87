package no.hvl.dat108.f05;

import java.util.Random;


public class Eksempel1_Oppgave {

	public static void main(String[] args) throws InterruptedException {
		/*
		 * Opprett og start 2 tr�der som kj�rer doSomeWildStuff() samtidig.
		 */
		Thread t1 = new Thread(new WildThread());
		Thread t2 = new Thread(new WildThread());
		
		t1.start();
		t2.start();
		t1.join();
		t2.join();
	}
	
	public static void doSomeWildStuff() {
		Random r = new Random();
		for (int i=1; i<=10; i++) {
				System.out.println(i);
			try {
				Thread.sleep(r.nextInt(100));
			} catch (InterruptedException e) {
			}
		}
	}
}
	
	class WildThread implements Runnable {
		
	    @Override
	    public void run() {
	        Eksempel1_Oppgave.doSomeWildStuff();
	    }
	    
	}

